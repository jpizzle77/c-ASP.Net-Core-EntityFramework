
@model OneToManyExample.Models.Album

@if(ViewBag.Albums != null)
{
    @foreach(var album in ViewBag.Albums)
    {
    <p>@album.name</p> 
    }
}


<h2>Add albums to Artist</h2>
<form asp-action="CreateAlbum" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="name"></span>
        <label asp-for="name"></label>
        <input asp-for="name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="release_date"></span>
        <label asp-for="release_date"></label>
        <input asp-for="release_date" class="form-control">
    </div>
    <input type="hidden" name="artist_id" value="@Model.artist_id">
    <input type="submit" value="Add album!">
</form>