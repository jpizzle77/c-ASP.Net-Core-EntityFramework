
@model IndexView



<form asp-controller="Home" asp-action="UpdatePasswordInfo" asp-route-id="@Model.NewUser.user_id" class="form-horizontal" method="POST">
      
      <div class="panel panel-default">

          <!-- --------------- -->
          <div class="panel-heading">
            <h4 class="panel-title">Edit User Password</h4>
          </div>
          <!-- --------------- -->

        <div class="panel-body">

          <!-- --------------- -->
          <div class="form-group">
            <label asp-for="NewUser.password" class="col-sm-2 control-label">Password</label>
              <div class="col-sm-10">
                <span asp-validation-for="NewUser.password" class="input-group-addon"></span> 
                <input asp-for="NewUser.password" class="form-control">
              </div>
          </div>
          <!-- --------------- -->

           <div class="form-group">
            <label asp-for="NewUser.confirm_password" class="col-sm-2 control-label">Confirm Password</label>
              <div class="col-sm-10">
                <span asp-validation-for="NewUser.confirm_password" class="input-group-addon"></span> 
                <input asp-for="NewUser.confirm_password" class="form-control">
              </div>
          </div>

          <input type="hidden" name="NewUser.user_id" value="@Model.NewUser.user_id">
        
          <!-- --------------- -->
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <button type="submit" class="btn btn-primary">Update Password</button>
            </div>
          </div>
          <!-- --------------- -->

           
        </div>
        
        
      </div>
   </form>